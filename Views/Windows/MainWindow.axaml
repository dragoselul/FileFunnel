<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FileFunnel.ViewModels.Windows"
        x:Class="FileFunnel.Views.Windows.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="FileFunnel" Width="800" Height="450">

    <!-- if youâ€™re relying on ViewLocator/DI, skip setting DataContext here -->
    <!-- otherwise do it in code-behind -->

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20">
        <TextBlock Text="{Binding Greeting}" 
                   HorizontalAlignment="Center" />
        <Button Content="Open Drive Window"
                Command="{Binding OpenDriveWindowCommand}" />
    </StackPanel>
</Window>